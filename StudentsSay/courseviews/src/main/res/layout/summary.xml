<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#fff"
                android:gravity="center_vertical|center_horizontal">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Views On ITEC 2120"
            android:id="@+id/textView"
            android:textSize="35sp"
            android:textColor="#ff6eb4e2"
            android:textStyle="bold"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerInParent="true" android:background="#ff6eb4e2"
            android:gravity="center" android:layout_below="@+id/textView" android:id="@+id/relativeLayout2">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Read Book?"
                android:id="@+id/textView2" android:layout_alignParentTop="false" android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:textSize="30sp" android:textColor="#FFF"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Good Book?"
                android:id="@+id/textView3" android:layout_below="@+id/textView2" android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true" android:textSize="30sp"
                android:textColor="#FFF"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Cool\n  Projects?"
                android:id="@+id/textView4" android:layout_below="@+id/textView3" android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true" android:textSize="30sp"
                android:textColor="#FFF"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Work Load:"
                android:id="@+id/textView5" android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="false" android:layout_alignParentStart="true"
                android:textSize="30sp" android:textColor="#FFF"
                />
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:minHeight="40dp"
                android:layout_toRightOf="@+id/textView2" android:layout_toEndOf="@+id/textView2"
                android:layout_marginTop="-5dp"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar2"
                android:minHeight="40dp"
                android:layout_toRightOf="@+id/textView3" android:layout_alignTop="@+id/textView3"
                android:layout_toEndOf="@+id/textView3"
                />
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar3"
                android:minHeight="40dp"
                android:layout_toRightOf="@+id/textView4" android:layout_toEndOf="@+id/textView4"
                android:layout_above="@+id/textView5" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Career/intern\n     relevant?"
                android:id="@+id/textView19"
                android:layout_below="@+id/textView5" android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true" android:textSize="30sp"
                android:textColor="#FFF"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="tools/software\n used:"
                android:id="@+id/textView20"
                android:layout_below="@+id/textView19"
                android:textSize="30sp"
                android:textColor="#FFF"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yes/no"
                android:id="@+id/textView21"
                android:textSize="30sp"
                android:textColor="#fff" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/textView19" android:layout_toRightOf="@+id/textView19"
                android:layout_toEndOf="@+id/textView19"
                android:gravity="center"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gimp/etc."
                android:id="@+id/textView22"
                android:layout_alignParentEnd="false"
                android:textSize="30sp" android:textColor="#fff"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/textView20"/>
        <SeekBar
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar2"
                android:visibility="visible"
                android:max="50" android:clickable="false" android:background="#fff"
                android:layout_toRightOf="@+id/textView5" android:layout_below="@+id/textView4"
                android:layout_toEndOf="@+id/textView5"/>
    </RelativeLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/button" android:layout_alignParentBottom="true" android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true" android:background="#ff6eb4e2" android:textSize="25sp"
            android:textColor="#fff" android:gravity="center_vertical|center_horizontal" android:clickable="true"
            android:textAlignment="gravity" android:typeface="monospace" style="?android:attr/buttonStyleToggle"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Review"
            android:id="@+id/button4" android:layout_alignParentBottom="true"
            android:background="#ff6eb4e2" android:textSize="25sp"
            android:textColor="#fff"
            android:clickable="true"
            android:textAlignment="gravity" android:typeface="monospace"
            style="?android:attr/buttonStyleToggle" android:layout_marginRight="2dp" android:layout_marginLeft="2dp"
            android:layout_centerHorizontal="true" android:layout_toLeftOf="@+id/button5"
            android:layout_toRightOf="@+id/button"/>
    <Button
            style="?android:attr/buttonStyleInset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/button5" android:layout_alignParentBottom="true"
            android:background="#ff6eb4e2"
            android:textSize="25sp"
            android:textColor="#fff" android:clickable="true"
            android:textAlignment="gravity"
            android:typeface="monospace" android:layout_alignParentEnd="true" android:layout_alignParentRight="true"/>
</RelativeLayout>