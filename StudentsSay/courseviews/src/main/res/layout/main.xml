<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity" android:background="#fff" android:gravity="center_vertical|center_horizontal">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse ITEC Courses"
            android:id="@+id/browse_button"
            android:layout_marginBottom="42dp" android:textSize="33dp" android:width="250dp"
            android:background="#ff6eb4e2" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
            android:hint="Enter an ITEC Number" android:textSize="30dp" android:gravity="center_vertical|center_horizontal"
            android:textColorHint="#ff6eb4e2" android:backgroundTint="#ff6eb4e2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Your Course!"
            android:id="@+id/textView14" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp" android:textSize="42dp" android:textColor="#ff6eb4e2"
            android:textStyle="bold|italic" android:paddingRight="5dp"
            android:paddingLeft="5dp" android:singleLine="false"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Search"
            android:id="@+id/enter_button"
            android:width="250dp" android:textSize="33dp" android:background="#ff6eb4e2"
            android:layout_below="@+id/editText" android:layout_alignLeft="@+id/browse_button"
            android:layout_alignStart="@+id/browse_button" android:layout_marginTop="20dp"/>

</RelativeLayout>
