<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="#fff">

    <Button
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:text="Add Review"
            android:id="@+id/button3" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="58dp" android:background="#ff6eb4e2" android:textSize="45sp"
            android:textAlignment="center"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ITEC 2120\n   Intro to Java"
            android:id="@+id/textView7" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:textSize="40sp" android:textColor="#ff6eb4e2" android:textStyle="bold"
            />
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerInParent="true" android:background="#ff6eb4e2">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Read Book:"
                android:id="@+id/textView8" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:background="#ff6eb4e2"
                android:textSize="30sp" android:textColor="#FFF" android:layout_marginBottom="8sp"
                android:layout_marginTop="7sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Good Book:"
                android:id="@+id/textView9" android:layout_below="@+id/textView8" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:background="#ff6eb4e2" android:textSize="30sp"
                android:textColor="#FFF" android:layout_marginBottom="8sp" android:layout_marginTop="7sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Cool\n  Projects:"
                android:id="@+id/textView10" android:layout_below="@+id/textView9" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:background="#ff6eb4e2" android:textSize="30sp"
                android:textColor="#FFF" android:layout_marginBottom="8sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Work Load:"
                android:id="@+id/textView11" android:layout_below="@+id/textView10"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:background="#ff6eb4e2" android:textSize="30sp" android:textColor="#FFF"
                android:layout_marginBottom="8sp"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:id="@+id/ratingBar4"
                android:minHeight="35sp"
                android:layout_toRightOf="@+id/textView8" android:layout_toEndOf="@+id/textView8"
                android:background="#ff6eb4e2"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:id="@+id/ratingBar5"
                android:minHeight="40sp" android:layout_below="@+id/ratingBar4"
                android:layout_toRightOf="@+id/textView9" android:layout_toEndOf="@+id/textView9"
                android:background="#ff6eb4e2" android:layout_marginLeft="-3sp"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:id="@+id/ratingBar6" android:layout_below="@+id/ratingBar5"
                android:layout_toRightOf="@+id/textView11" android:layout_toEndOf="@+id/textView11"
                android:minHeight="40dp" android:background="#ff6eb4e2" android:layout_marginTop="28sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Career/intern\n     relevant:"
                android:id="@+id/textView15"
                android:layout_below="@+id/textView11" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:background="#ff6eb4e2" android:textSize="30sp"
                android:textColor="#FFF" android:layout_marginBottom="8sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="tools/software\n used:"
                android:id="@+id/textView16"
                android:layout_below="@+id/textView15"
                android:layout_alignParentLeft="true" android:background="#ff6eb4e2" android:textSize="30sp"
                android:textColor="#FFF"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No! :("
                android:id="@+id/textView17"
                android:layout_toRightOf="@+id/textView15" android:layout_toEndOf="@+id/textView15"
                android:textAlignment="center" android:background="#ff6eb4e2" android:textSize="30sp"
                android:textColor="#fff" android:layout_alignParentRight="false"
                android:layout_marginTop="40sp" android:layout_marginBottom="5sp" android:layout_marginLeft="70sp"
                android:layout_below="@+id/seekBar"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Eclipse"
                android:id="@+id/textView18" android:layout_alignTop="@+id/textView16"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                android:background="#ff6eb4e2" android:textSize="30sp" android:textColor="#fff"
                android:layout_alignParentBottom="false" android:layout_marginRight="45sp"
                android:layout_marginEnd="45sp" android:layout_marginTop="20sp"/>
        <SeekBar
                android:layout_width="400sp"
                android:layout_height="50sp"
                android:id="@+id/seekBar"
                android:layout_toRightOf="@+id/textView11" android:layout_toEndOf="@+id/textView11"
                android:visibility="visible" android:layout_below="@+id/ratingBar6"
                />
    </RelativeLayout>
</RelativeLayout>