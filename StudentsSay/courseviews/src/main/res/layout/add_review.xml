<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button3" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="58dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contribute a Review"
            android:id="@+id/textView7" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp" android:textSize="30dp"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView8" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginTop="151dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView9" android:layout_below="@+id/textView8" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView10" android:layout_below="@+id/textView9" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView11" android:layout_below="@+id/textView10"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar4"
                android:minHeight="40dp" android:layout_alignTop="@+id/textView8"
                android:layout_toRightOf="@+id/textView8" android:layout_toEndOf="@+id/textView8"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar5"
                android:minHeight="40dp" android:layout_below="@+id/ratingBar4"
                android:layout_toRightOf="@+id/textView9" android:layout_toEndOf="@+id/textView9"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar6" android:layout_below="@+id/ratingBar5"
                android:layout_toRightOf="@+id/textView11" android:layout_toEndOf="@+id/textView11"
                android:minHeight="40dp"/>
    </RelativeLayout>
</RelativeLayout>