<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="#fff">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Review"
            android:id="@+id/button3" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:background="#ff6eb4e2" android:textSize="25sp" android:typeface="monospace"
            android:textAlignment="center"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ITEC 0000 Default"
            android:id="@+id/textView7"
            android:textSize="35sp" android:textColor="#ff6eb4e2" android:textStyle="bold"
            android:layout_marginBottom="2dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerInParent="true" android:background="#ff6eb4e2"
            android:id="@+id/relativeLayout">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Read Book?"
                android:id="@+id/textView8" android:layout_alignParentTop="false" android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:textSize="30sp" android:textColor="#FFF"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Good Book?"
                android:id="@+id/textView9" android:layout_below="@+id/textView8" android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true" android:textSize="30sp"
                android:textColor="#FFF"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Cool\n  Projects?"
                android:id="@+id/textView10" android:layout_below="@+id/textView9" android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true" android:textSize="30sp"
                android:textColor="#FFF"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Work Load:"
                android:id="@+id/textView11" android:layout_below="@+id/textView10"
                android:layout_alignParentLeft="false" android:layout_alignParentStart="true"
                android:textSize="30sp" android:textColor="#FFF"/>

        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar4" android:minHeight="40dp"
                android:layout_toRightOf="@+id/textView8" android:layout_toEndOf="@+id/textView8"
                android:layout_marginTop="-5dp"/>
        <!--<RatingBar-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/ratingBar4"-->
                <!--android:minHeight="35dp"-->
                <!--android:layout_toRightOf="@+id/textView8" android:layout_toEndOf="@+id/textView8"-->
                <!--android:layout_above="@+id/ratingBar5" android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentRight="true"/>-->



        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/ratingBar5"
                android:minHeight="40dp"
                android:layout_toRightOf="@+id/textView9" android:layout_alignTop="@+id/textView9"
                />



        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar6"
                android:minHeight="40dp" android:layout_toRightOf="@+id/textView10"
                android:layout_toEndOf="@+id/textView10"
                android:layout_above="@+id/textView11" />



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Career/intern\n     relevant?"
                android:id="@+id/textView15"
                android:layout_below="@+id/textView11" android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true" android:textSize="30sp"
                android:textColor="#FFF"/>



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="tools/software\n used:"
                android:id="@+id/textView16"
                android:layout_below="@+id/textView15"
                android:textSize="30sp"
                android:textColor="#FFF"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edittext17"
                android:textSize="30sp"
                android:textColor="#fff" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/textView15" android:layout_toRightOf="@+id/textView15"
                android:layout_toEndOf="@id/textView15"
                android:gravity="center" android:hint="yes/no" android:inputType="textCapWords"
                android:maxLength="3"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edittext18"
                android:layout_alignParentEnd="false"
                android:textSize="30sp" android:textColor="#fff"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/textView16" android:hint="Gimp/etc."
                android:inputType="textCapWords" android:maxLength="6"/>

        <SeekBar
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:visibility="visible"
                android:max="50" android:clickable="false" android:background="#fff"
                android:layout_toRightOf="@+id/textView11" android:layout_below="@+id/textView10"/>
    </RelativeLayout>

</RelativeLayout>